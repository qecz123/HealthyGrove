@model HealthyGrove.Models.Invasive

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h5>
        @Html.ActionLink("Home", "Index", "Home")
        &nbsp;/&nbsp;
        @Html.ActionLink("Find Invasive Plants", "Index")
        &nbsp;/&nbsp;
        @Html.DisplayFor(model => model.ScientificName)
    </h5>
    <h2 class="text-center">Details of @Html.DisplayFor(model => model.ScientificName)</h2>
    <hr />
</div>

<div class="container-fluid">
    <div class="row">
            <div class="col-sm-12 col-md-4 card-container">
                <div class="card-find">

                    <div class="thumbnail">
                        <div class="img-container" style="position: relative">
                            <img src=@Html.Raw(@Html.DisplayFor(model => model.Image)) style="height:250px;" class="img-fluid text-center">
                        </div>
                        <div class="caption justify-content-center text-center">
                            <h2>@Html.DisplayFor(model => model.CommonName)</h2>
                            <h3 class="text-muted"><em>@Html.DisplayFor(model => model.ScientificName)</em></h3>
                            <hr />
                            <div>
                                <a href="#" class="mybtn btn btn-success" onclick="savePlant(@Html.DisplayFor(model => model.InvasiveId))">Save the invasive plant</a>
                            </div>
                            &nbsp;
                            <div>
                                @Html.ActionLink("Invasives Plant Collection", "Collection", "Invasives", new { @class = "mybtn btn btn-success" })

                            </div>
                            &nbsp;
                            <div>
                                @Html.ActionLink("Weed Removal Procedure", "RemoveWeed", "Invasives", new { @class = "mybtn btn btn-success" })

                            </div>
                            &nbsp;
                        </div>
                </div>
            </div>
          
        </div>
        <div class="col-sm-12 col-md-8">
            <div class="row">
                <div class="col-sm-3">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/plantType.png" class="img-circle img-fluid" />
                        <div class="title">Plant Type</div>
                        <div class="value">@Html.DisplayFor(model => model.PlantType)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/grass.png" class="img-circle img-fluid" />
                        <div class="title">Weed Status</div>
                        <div class="value">@Html.DisplayFor(model => model.WeedStatus)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/victorianStatus.png" class="img-circle img-fluid" />
                        <div class="title">Victorian Status</div>
                        <div class="value">@Html.DisplayFor(model => model.VictorianStatus)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/areaOfPotentialDistributionRemaining.png" />
                        <div class="title">Area of Potential Spread Remaining</div>
                        <div class="value">@Html.DisplayFor(model => model.Area_of_potential_distribution_remaining)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/plantFamily.png" class="img-circle img-fluid" />
                        <div class="title">Family</div>
                        <div class="value">@Html.DisplayFor(model => model.Family)</div>
                    </div>
                </div>

                <div class="col-sm-3">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/vicBiome.png" class="img-circle img-fluid" />
                        <div class="title">Victorian Biomes</div>
                        <div class="value">@Html.DisplayFor(model => model.VictorianBiomes)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/impactOnNaturalSystems.png" class="img-circle img-fluid" />
                        <div class="title">Impact on Natural Systems</div>
                        <div class="value">@Html.DisplayFor(model => model.Impact_on_natural_systems)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/native.png" class="img-circle img-fluid" />
                        <div class="title">Native to Victoria?</div>
                        <div class="value">@Html.DisplayFor(model => model.Native)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/rateOfDispersal.png" class="img-circle img-fluid" />
                        <div class="title">Rate of Dispersal</div>
                        <div class="value">@Html.DisplayFor(model => model.Rate_of_dispersal)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/height.png" class="img-circle img-fluid" />
                        <div class="title">Height Ranges</div>
                        <div class="value">@Html.DisplayFor(model => model.HeightRanges)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
