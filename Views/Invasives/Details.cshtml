                        <div class="title">Spread Ranges</div>
                        <div class="value">@Html.DisplayFor(model => model.SpreadRanges)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/flower.png" class="img-circle img-fluid" />
                        <div class="title">Flower Colour</div>
                        <div class="value">@Html.DisplayFor(model => model.FlowerColour)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/foliage.png" class="img-circle img-fluid" />
                        <div class="title">Leaf Colour</div>
                        <div class="value">@Html.DisplayFor(model => model.LeafColour)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/climate.png" class="img-circle img-fluid" />
                        <div class="title">Climate</div>
                        <div class="value">@Html.DisplayFor(model => model.ClimateZones)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/tree.png" class="img-circle img-fluid" />
                        <div class="title">Abcission</div>
                        <div class="value">@Html.DisplayFor(model => model.Abcission)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/soil.png" class="img-circle img-fluid" />
                        <div class="title">Soil Type</div>
                        <div class="value">@Html.DisplayFor(model => model.SoilType)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/sunlight.png" class="img-circle img-fluid" />
                        <div class="title">Light Needs</div>
                        <div class="value">@Html.DisplayFor(model => model.LightNeeds)</div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/riskRating.png" class="img-fluid img-circle" />
                        <div class="title">Potential for Invasiveness</div>
                        <div class="value">@Html.DisplayFor(model => model.Potential_for_invasion)</div>
                    </div>
                </div>
                <!--<div class="col-sm-3">
                    <div class="card-tile text-center">
                    <img src="~/Image/Icons/potentialForInvasion.png" class="img-fluid img-circle" />
                    <div class="title">Potential for Invasion</div>
                    <div class="value">@Html.DisplayFor(model => model.Potential_for_invasion)</div>
                    </div>-->

            </div>
        </div>
    </div>
</div>

<script>
    function savePlant(id) {

        $.ajax(
            {
                url: '/Invasives/Save',
                type: 'GET',
                data: { id: id },
                async: true,
                success: function (result) {
                    alert("Plant saved!");

                },
                error: function () {
                    alert("error");
                }
            }).done(function (result) {

            });

    }
</script>